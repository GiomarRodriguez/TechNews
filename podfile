source 'https://github.com/CocoaPods/Specs.git'
use_frameworks!

# Libraries group

def di_pod
	pod 'Swinject', '2.7.0'
	pod 'SwinjectAutoregistration', '2.7.0'
end

def tests_pod
	pod 'Quick', '3.0.0'
	pod 'Nimble', '8.1.2'
end

def interface_pod
	pod 'SnapKit', '5.0.1'
end


# Target group

target 'TechNews' do
	interface_pod
	di_pod
end

target 'TechNewsTests' do
	tests_pod
end

